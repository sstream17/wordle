<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScreenFragment">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0"
        android:background="@color/black"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:alpha="1"
        tools:text="Not in word list" />

    <TextView
        android:id="@+id/wordle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wordle"
        android:textAlignment="center"
        android:textSize="48dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/game_board"
        android:name="com.example.wordle.GameBoardFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordle"
        app:layout_constraintBottom_toTopOf="@+id/first_keyboard_row"/>


    <LinearLayout
        android:id="@+id/third_row_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_keyboard_row">

        <Button
            android:id="@+id/delete_button"
            style="@style/button_letters"
            android:layout_width="80dp"
            android:text="Del" />

        <Button
            android:id="@+id/Z"
            style="@style/button_letters"
            android:text="Z" />

        <Button
            android:id="@+id/X"
            style="@style/button_letters"
            android:text="X" />

        <Button
            android:id="@+id/C"
            style="@style/button_letters"
            android:text="C" />

        <Button
            android:id="@+id/V"
            style="@style/button_letters"
            android:text="V" />

        <Button
            android:id="@+id/B"
            style="@style/button_letters"
            android:text="B" />


        <Button
            android:id="@+id/N"
            style="@style/button_letters"
            android:text="N" />


        <Button
            android:id="@+id/M"
            style="@style/button_letters"
            android:text="M" />

        <Button
            android:id="@+id/enter_button"
            style="@style/button_letters"
            android:layout_width="80dp"
            android:text="Enter" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_keyboard_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_board">

        <Button
            android:id="@+id/Q"
            style="@style/button_letters"
            android:text="Q" />

        <Button
            android:id="@+id/W"
            style="@style/button_letters"
            android:text="W" />

        <Button
            android:id="@+id/E"
            style="@style/button_letters"
            android:text="E" />

        <Button
            android:id="@+id/RR"
            style="@style/button_letters"
            android:text="R" />

        <Button
            android:id="@+id/T"
            style="@style/button_letters"
            android:text="T" />

        <Button
            android:id="@+id/Y"
            style="@style/button_letters"
            android:text="Y" />

        <Button
            android:id="@+id/U"
            style="@style/button_letters"
            android:text="U" />

        <Button
            android:id="@+id/I"
            style="@style/button_letters"
            android:text="I" />

        <Button
            android:id="@+id/O"
            style="@style/button_letters"
            android:text="O" />

        <Button
            android:id="@+id/P"
            style="@style/button_letters"
            android:text="P" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_keyboard_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_keyboard_row">

        <Button
            android:id="@+id/A"
            style="@style/button_letters"
            android:text="A" />

        <Button
            android:id="@+id/S"
            style="@style/button_letters"
            android:text="S" />

        <Button
            android:id="@+id/D"
            style="@style/button_letters"
            android:text="D" />

        <Button
            android:id="@+id/F"
            style="@style/button_letters"
            android:text="F" />

        <Button
            android:id="@+id/G"
            style="@style/button_letters"
            android:text="G" />

        <Button
            android:id="@+id/H"
            style="@style/button_letters"
            android:text="H" />

        <Button
            android:id="@+id/J"
            style="@style/button_letters"
            android:text="J" />

        <Button
            android:id="@+id/K"
            style="@style/button_letters"
            android:text="K" />

        <Button
            android:id="@+id/L"
            style="@style/button_letters"
            android:text="L" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>