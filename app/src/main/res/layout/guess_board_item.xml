<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/first_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/first_row_1"
            style="@style/letters"
            android:background="@drawable/border"
            tools:text="A" />

        <TextView
            android:id="@+id/first_row_2"
            style="@style/letters" />

        <TextView
            android:id="@+id/first_row_3"
            style="@style/letters" />

        <TextView
            android:id="@+id/first_row_4"
            style="@style/letters" />

        <TextView
            android:id="@+id/first_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_letters_row">

        <TextView
            android:id="@+id/second_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/second_row_2"
            style="@style/letters" />

        <TextView
            android:id="@+id/second_row_3"
            style="@style/letters" />

        <TextView
            android:id="@+id/second_row_4"
            style="@style/letters" />

        <TextView
            android:id="@+id/second_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_letters_row">

        <TextView
            android:id="@+id/third_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/third_row_2"
            style="@style/letters" />

        <TextView
            android:id="@+id/third_row_3"
            style="@style/letters" />

        <TextView
            android:id="@+id/third_row_4"
            style="@style/letters" />

        <TextView
            android:id="@+id/third_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_letters_row">

        <TextView
            android:id="@+id/fourth_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/fourth_row_2"
            style="@style/letters" />

        <TextView
            android:id="@+id/fourth_row_3"
            style="@style/letters" />

        <TextView
            android:id="@+id/fourth_row_4"
            style="@style/letters" />

        <TextView
            android:id="@+id/fourth_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourth_letters_row">

        <TextView
            android:id="@+id/fifth_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/fifth_row_2"
            style="@style/letters" />

        <TextView
            android:id="@+id/fifth_row_3"
            style="@style/letters" />

        <TextView
            android:id="@+id/fifth_row_4"
            style="@style/letters" />

        <TextView
            android:id="@+id/fifth_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixth_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifth_letters_row">

        <TextView
            android:id="@+id/sixth_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <TextView
            android:id="@+id/sixth_row_2"
            style="@style/letters" />

        <TextView
            android:id="@+id/sixth_row_3"
            style="@style/letters" />

        <TextView
            android:id="@+id/sixth_row_4"
            style="@style/letters" />

        <TextView
            android:id="@+id/sixth_row_5"
            style="@style/letters" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>